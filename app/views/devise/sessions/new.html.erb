<div class="auth-hero">
  <div class="auth-card">
    <h2 class="auth-title text-center">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control auth-input" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control auth-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "ログイン状態を保持", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "ログイン", class: "btn btn-light auth-primary-btn" %>
      </div>
    <% end %>

    <div class="auth-links text-center mt-3">
      <%= link_to "新規登録はこちら", new_user_registration_path, class: "auth-link" %>
    </div>
  </div>
</div>
